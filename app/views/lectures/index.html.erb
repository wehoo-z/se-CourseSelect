<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>

    <div class="col-sm-10">

      <div class="panel panel-primary filterable">
        <div class="panel-heading">
        <h3 class="panel-title">讲义列表</h3>
        </div>
        <div class="panel-body">
          <table class="table table-responsive table-condensed table-hover">
            <thead>
            <tr>
              <th>讲义名称</th>
              <th>上传时间</th>
              <th>上传教师</th>
              <% if teacher_logged_in? %>
                  <th>操作</th>
                  <th><%= link_to "添加",new_lecture_path, class: 'btn btn-xs btn-info' %></th>

            <% else student_logged_in? %>
              <th>下载讲义</th>
              <% end %>
            </tr>
                  <tbody>
            <% @lectures.each do |lecture| %>
                <tr>
                  <td><%= lecture.title %></td>
                </tr>
                  <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
